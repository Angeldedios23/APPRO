<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CAF50">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Encabezado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:background="@android:color/transparent"
                android:contentDescription="Volver" />

            <TextView
                android:text="Detalles de residuos"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Semana -->
        <TextView
            android:id="@+id/semanaTextView"
            android:text="01 April - 07 April"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Fecha de recolección -->
        <EditText
            android:id="@+id/fechaEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de recolección (mm/dd/yyyy)"
            android:background="@android:drawable/editbox_background"
            android:layout_marginTop="8dp"
            android:inputType="date" />

        <!-- Observaciones -->
        <EditText
            android:id="@+id/observacionesEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Indica cualquier situación..."
            android:background="@android:drawable/editbox_background"
            android:layout_marginTop="8dp" />

        <!-- Lista de residuos -->
        <LinearLayout
            android:id="@+id/listaResiduosLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <!-- Botón agregar -->
        <ImageButton
            android:id="@+id/agregarResiduoBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_add"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:layout_marginTop="12dp"
            android:contentDescription="Agregar residuo" />

        <!-- Resultados -->
        <TextView
            android:id="@+id/puntosText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puntos obtenidos: 0 pts"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/cantidadText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad: 0 piezas"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/pesoAproxText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peso aprox: 0.00 Kg"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/totalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: 0.00 Kg"
            android:textColor="#FFFFFF" />


        <!-- Botón finalizar -->
        <Button
            android:id="@+id/btnFinalizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place order"
            android:layout_marginTop="16dp"
            android:background="#000000"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>